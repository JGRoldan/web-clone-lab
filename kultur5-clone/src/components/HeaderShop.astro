<style>
	header {
		display: grid;
		grid-template-columns: repeat(12, minmax(0, 1fr));
		margin-top: 0.5rem;
		font-weight: 900;
		font-size: 1.1rem;
		position: sticky;
		top: 1%;
		z-index: 1000;
	}
