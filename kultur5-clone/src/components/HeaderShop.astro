	}
	nav ul {
		list-style: none;
	}

	nav ul li:not(:first-child) {
		color: var(--grey-text);
	}
	.left-nav div:last-child a {
		color: var(--grey-text);
	}

	nav ul li:hover {
		color: var(--black-text);
		transition: ease-in 0.2s;
		cursor: pointer;
	}
	@media (max-width: 992px) {
		.rigth-nav {
			align-items: end;
			flex-direction: column;
		}
	}
</style>
