---
import { Image } from 'astro:assets'
import CountDown from './CountDown.astro'
---

<section
	class='overflow-hidden -mt-60 h-[76vh] relative w-full flex items-start justify-center bg-cover bg-center'
	style="background-image: url('/images/fondo-1.png');"
>
	<!-- Gradiente superpuesto con opacidad -->
	<div
		class='absolute inset-0 opacity-70'
		style='background-image: linear-gradient(145deg, var(--color-bg-primary) 50%, var(--color-primary) 100%);'
	>
	</div>
	<div class='z-10 w-[60%] md:w-[20%] mt-10'>
		<Image
			class='w-full h-auto object-cover animate-custom-bounce'
			src='/images/logos/logo-blanco.png'
			alt='Logo de la Copa Potrero.'
			width={100}
			height={100}
		/>

		<CountDown />
	</div>
</section>
