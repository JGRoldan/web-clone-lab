---
import { ViewTransitions } from 'astro:transitions'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link
			rel='icon'
			type='image/png'
			href='/images/logos/logo-blanco.png'
			sizes='32x32'
		/>
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body
		class='min-h-screen flex flex-col items-center justify-center overflow-y-scroll overflow-x-hidden'
	>
		<Header />
		<div class='flex-grow w-full mt-40'>
			<slot />
		</div>
		<Footer />
		<small class='bg-white text-sm w-full text-center'>
			Pagina no oficial desarrollada por <a
				href='https://github.com/JGRoldan/'
				class='underline'
				title="JGRoldan's GitHub"
			>
				JGRoldan
			</a>
		</small>
	</body>
</html>
<style is:global>
	:root {
		--color-primary: #be8330;
		--color-secondary: #895d22;
		--color-text: #ffffff;
		--color-accent: #f5edde;
		--color-0763daa: #121214;
		--color-bg-primary: #20192c;
		--color-bg-secondary: #2a203a;
		--color-bg-tertiary: #3f3254;
		--color-bg-transparent: #2a203a28;
	}
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	body {
		background-color: var(--color-bg-primary);
	}
	@font-face {
		font-family: 'MonumentExtended-Regular';
		src: url('/fonts/MonumentExtended-Regular.otf') format('opentype');
	}

	@font-face {
		font-family: 'MonumentExtended-Ultrabold';
		src: url('/fonts/MonumentExtended-Ultrabold.otf') format('opentype');
	}

	h1 {
		font-family: 'MonumentExtended-Ultrabold', sans-serif;
	}

	p,
	span,
	h2 {
		font-family: 'MonumentExtended-Regular', sans-serif;
	}
</style>
